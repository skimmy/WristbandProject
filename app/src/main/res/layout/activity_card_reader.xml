<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.logostech.wristbandproject.app.CardReaderActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <!-- This is the first row: "Last Tag Discovered" -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/last_tag_discovered_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="15dp"
                style="@style/TextViewBold"
                android:id="@+id/cardReaderLastTagText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 'State' section -->

        <Button
            android:id="@+id/card_reader_reset_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_string"/>


    </LinearLayout>
</RelativeLayout>
